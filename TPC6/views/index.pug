extends layout

block content
    .w3-card-4.w3-margin
        header(class="w3-container w3-teal")
            h3 File Upload form

        form.w3-container.w3-margin(class='w3-container' method='POST' action='/insert' enctype = "mutipart/form-data")
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Ficheiro
                .w3-col.s9.w3-border
                    input.w3-input(type='file' name='ficheiro' placeholder='imagem')
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Descricao
                .w3-col.s9.w3-border
                    input.w3-input(type='textarea' name='descricao' placeholder='Algo que descreva a imagem...')
            .w3-row.w3-margin-top
                input.w3-btn.w3-teal(type='submit' value='Adicionar')

    main 
        .container
        table.table
            tr
                th Data
                th Nome
                th Tamanho 
                th Tipo 
                th Descricao 
                th DEL
            tbody
                each f in files
                    tr
                        td #{f.date}
                        td #{f.name}
                        td #{f.mimetype}
                        td #{f.size}
                        td #{f.desc}
                        form.w3-container.w3-margin(class='w3-container' method='get' action='/delete/#{d}')
                            .w3-row.w3-margin-bottom
                                .w3-col.s3
                                    label.w3-text-teal DEL
                                .w3-col.s9.w3-border
                                    input.w3-input(type='submit' name='del')

        footer(class="w3-container w3-teal")
            address Generated by StudentApp :: 2020-Nov, jcr
